source 'https://rubygems.org'
ruby '1.9.3'

gem 'rails'

gem 'mongoid'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'bootstrap-sass'
  gem 'compass-rails'

  gem 'uglifier'
end

gem 'jquery-rails'
gem 'fancybox-rails'

# Use thin as the app server
gem 'thin'

group :development, :test do
  # To use debugger
  gem 'debugger'
end

# Memcache client gem
gem 'dalli'

gem 'RedCloth'

gem 'fog'

gem 'carrierwave'
gem 'carrierwave-mongoid', require: 'carrierwave/mongoid'

gem 'rmagick'

gem 'newrelic_rpm'

gem 'simple_form'
